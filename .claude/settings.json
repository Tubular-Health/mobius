{
  "permissions": {
    "allow": [
      "Bash(mkdir */.mobius/*)",
      "Bash(mkdir -p */.mobius/*)",
      "Bash(mkdir .mobius/*)",
      "Bash(mkdir -p .mobius/*)",
      "Bash(ls .mobius/*)",
      "Bash(ls */.mobius/*)",
      "Write(.mobius/**)",
      "Edit(.mobius/**)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "TodoWrite|TaskCreate|TaskUpdate",
        "hooks": [
          {
            "type": "command",
            "command": "bash scripts/capture-agent-todos.sh"
          }
        ]
      }
    ]
  }
}
